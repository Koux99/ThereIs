<div class="upper">
  <div class="top-wrapper">
    <div class="container">
        <h1>There is no waste <br>in our life ...</h1>
        <p>Let's dig into your interests deeper and deeper </p>
      <% unless user_signed_in? %>
        <div class="btn-wrapper">
          <%= link_to "Sign up", new_user_registration_path, class: "btn sign_up" %>
        </div>
      <% else %>
        <div class="btn-wrapper">
          <%= link_to "Welcome to There is !!",root_path , class: "btn sign_up" %>
        </div>
      <% end %>    
    </div>
  </div>
</div>

<main class="main">
  <div class="inner">
  <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
  <% end %>
    
  <div class="card__wrapper">
      <%= render partial: "post", collection: @posts%>
    </div>
  </div>

  <% if user_signed_in? && current_user.admin? %>
    <%= link_to(new_post_path, class: 'admin_post_btn') do %>
      <span class='admin_btn_text'>Post</span>
      <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "admin_btn_icon" %>
    <% end %>
  <% end %>
  
</main>